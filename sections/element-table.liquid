<div class="elementTable" data-section-id="{{ section.id }}" data-section-type="video-section">
    <h1>{{ section.settings.header }}</h1>

    {% for block in section.blocks %}

        {% for product in collection.all_products %}
            {% if product.handle contains block.settings.element_type %}
                {{ product.title }}
            {% endif %}
        {% endfor %}

    {% endfor %}
</div>

{% schema %}
{
    "name": {
        "en": "Element Table"
    },
    "presets": [
        {
            "name": "Element Table",
            "category": "Element Table"
        }
    ],
    "max_blocks": 16,
    "blocks": [
        {
          "type": "element",
          "name": "Element",
          "settings": [
            {
                "type": "select",
                "id": "element_type",
                "label": "Element/Ingredient Type",
                "default": "clear-skin",
                "options": [
                    { "value": "clear-skin", "label": "Clear Skin" },
                    { "value": "other-category", "label": "Other Category" }
                ]
            },
            {
              "type": "text",
              "id": "element_initials",
              "label": "Element/Ingredient Initials"
            },
            {
                "type": "text",
                "id": "element_name",
                "label": "Element/Ingredient Name"
            },
            {
                "type": "textarea",
                "id": "element_description",
                "label": "Element/Ingredient Description"
            }
          ]
        }
    ],
    "settings": [
        {
          "type": "text",
          "id": "header",
          "label": "Header"
        }
    ]
}
{% endschema %}
